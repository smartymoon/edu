{
    "name": "laravel/laravel",
    "description": "The Laravel Framework.",
    "keywords": ["framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "encore/laravel-admin": "^1.8",
        "fideloper/proxy": "~3.3",
        "fruitcake/laravel-cors": "^1.0",
        "fzaninotto/faker": "~1.4",
        "laravel/framework": "5.5.*",
        "laravel/passport": "~4.0",
        "laravel/tinker": "~1.0",
        "lcobucci/jwt": "3.3.3",
        "linecorp/line-bot-sdk": "^7.1",
        "orangehill/iseed": "^2.0",
        "pusher/pusher-php-server": "~3.0",
        "royalmar/laravel-line-notify": "^1.0",
        "socialiteproviders/line": "^2",
        "webpatser/laravel-uuid": "^4.0"
    },
    "require-dev": {
        "filp/whoops": "~2.0",
        "mockery/mockery": "~1.0",
        "phpunit/phpunit": "~6.0",
        "symfony/thanks": "^1.0"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "helper/helper.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "warmup": [
            "php artisan config:cache",
            "php artisan route:cache"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover",
            "echo $PASSPORT_PUBLIC_KEY > storage/oauth-public.key",
            "echo $PASSPORT_PRIVATE_KEY > storage/oauth-private.key"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
